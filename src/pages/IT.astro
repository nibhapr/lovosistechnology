---

import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";
const pageTitle: string = `IT Solution In Dubai | ${SITE.Title + " - " + "Custom Fabrication & Surveillance Solution Provider In Dubai, United Arab Emirates"}`;
interface Props {
  title: string;
  subTitle?: string;
  benefits?: Array<string>;
}

const abtitle: string = "IT Solution In Dubai";
const absubTitle: string ="Discover Lovosis, Dubai's authorized supplier of top-quality Surveillance & IT Solution."
const structuredData={
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://lovosis.com/about",
    "url": "https://lovosis.com/about",
    "name": "IT Solution | Lovosis",
    "description": "Discover Lovosis, Dubai's authorized supplier of top-quality Surveillance & IT Solution. Learn about our commitment to excellence in the UAE construction industry.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://lovosis.com",
      "name": "Lovosis",
      "description": "Custom Fabrication & Surveillance Solution Provider In Dubai, United Arab Emirates."
    },
    "inLanguage": "en-US"
  }
---

<style>
  .autoRotate{
    animation: autoRotateAnimation;
    animation-timeline: view();
  }
  @keyframes autoRotateAnimation{
      from{
          transform: rotate(0deg);
      }
      to{
          transform: rotate(360deg);
      }
  }  

  .autoShow{
    animation: autoShowAnimation both;
    animation-timeline: view(70% 5%);

    }

    @keyframes autoShowAnimation{
    from{
        opacity: 0;
        transform: translateY(200px) scale(0.3);
    }to{
        opacity: 1;
        transform: translateY(0) scale(1);
    }
    }

    .fadeInRight {
    animation: fadeInRightAnimation;
    animation-timeline: view();
    }

    @keyframes fadeInRightAnimation {
        from {
            opacity: 0;
            transform: translateX(100px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

</style>


<MainLayout
  title={pageTitle} sd={structuredData}

>



<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">

  <div class="text-center bg-gray-100 dark:bg-neutral-500 p-5 md:p-12 rounded-2xl mb-20">
    <h1
      class="text-balance animate-fade-in-left text-3xl md:text-6xl md:leading-tight font-bold tracking-tight text-neutral-800 dark:text-neutral-100"
    >
      {abtitle}
    </h1>
    <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-200">
      {absubTitle}
    </p>
  </div>
 
    <div class="grid lg:grid-cols-2 justify-items-center gap-5">
    <div class="flex flex-col justify-center">
        <img src="/pictures/it.webp" alt="billboard image" />
      
    </div>
    <div class="order-1 lg:order-2">
        <h2 class="text-3xl font-semibold text-gray-900 dark:text-gray-200">Empowering Businesses with Lovosis</h2>
        <p class="text-md mt-4 dark:text-gray-300">In today's rapidly evolving digital landscape, businesses need robust IT solutions to stay competitive and drive growth. Lovosis, a leading IT service provider in Dubai, offers comprehensive IT solutions tailored to meet the unique needs of businesses across various industries. Our expertise in cutting-edge technologies, combined with a deep understanding of the local market, positions us as the go-to partner for companies looking to leverage IT for success.</p>
    </div>
  </div>
 


  <div class="text-center mt-32 rounded-2xl mb-20">
    <h1 class="text-balance animate-fade-in-left text-2xl md:text-4xl md:leading-tight font-bold tracking-tight text-neutral-800 dark:text-neutral-100">
    Applications of Lovosis Surveillance Solutions
    </h1>
    
  </div>

  <div class="mx-auto max-w-7xl px-4 mt-20 sm:px-6 lg:px-8 lg:py-1">
    <ul id="cards" class="list-none grid grid-cols-1 grid-rows-4 gap-4">
      <li class="card sticky top-32 pt-4 bg-white dark:bg-neutral-600 rounded-lg shadow-xl cursor-pointer transition-all duration-300" id="card_1">
        <div class="card__content grid grid-cols-1 md:grid-cols-2 gap-1 p-5 rounded-lg text-left relative">
          <div>
            <h2 class="text-4xl font-light dark:text-neutral-200">Tailored IT Solutions for Your Business Needs</h2>
            <p class="text-base font-light leading-normal dark:text-neutral-300 mt-10">
              At Lovosis, we understand that every business is unique. Our bespoke IT solutions are designed to align with your specific goals, ensuring seamless operations, enhanced productivity, and maximum ROI. From system integration to custom software development, we deliver solutions that empower your business.
            </p>
          </div>
          <figure class="overflow-hidden">
            <img src="/pictures/logo.jpg" alt="Image description" class="w-full h-full object-contain" />
          </figure>
        </div>
      </li>
