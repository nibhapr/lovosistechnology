---

import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Surveillance Solution In Dubai | ${SITE.Title + " - " + "Custom Fabrication & Surveillance Solution Provider In Dubai, United Arab Emirates"}`;

interface Props {
  title: string;
  subTitle?: string;
  benefits?: Array<string>;
}

const abtitle: string = "Surveillance Solution In Dubai";
const absubTitle: string ="Discover Lovosis, Dubai's authorized supplier of top-quality Surveillance & IT Solution."
const structuredData={
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://lovosis.com/about",
    "url": "https://lovosis.com/about",
    "name": "Surviellance Solution | Lovosis",
    "description": "Discover Lovosis, Dubai's authorized supplier of top-quality Surveillance & IT Solution. Learn about our commitment to excellence in the UAE construction industry.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://lovosis.com",
      "name": "Lovosis",
      "description": "Custom Fabrication & Surveillance Solution Provider In Dubai, United Arab Emirates."
    },
    "inLanguage": "en-US"
  }
---

<style>
  .autoRotate{
    animation: autoRotateAnimation;
    animation-timeline: view();
  }
  @keyframes autoRotateAnimation{
      from{
          transform: rotate(0deg);
      }
      to{
          transform: rotate(360deg);
      }
  }  

  .autoShow{
    animation: autoShowAnimation both;
    animation-timeline: view(70% 5%);

    }

    @keyframes autoShowAnimation{
    from{
        opacity: 0;
        transform: translateY(200px) scale(0.3);
    }to{
        opacity: 1;
        transform: translateY(0) scale(1);
    }
    }

    .fadeInRight {
    animation: fadeInRightAnimation;
    animation-timeline: view();
    }

    @keyframes fadeInRightAnimation {
        from {
            opacity: 0;
            transform: translateX(100px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

</style>


<MainLayout
  title={pageTitle}

>



<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">

  <div class="text-center bg-gray-100 dark:bg-neutral-500 p-5 md:p-12 rounded-2xl mb-20">
    <h1
      class="text-balance animate-fade-in-left text-3xl md:text-6xl md:leading-tight font-bold tracking-tight text-neutral-800 dark:text-neutral-100"
    >
      {abtitle}
    </h1>
    <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-200">
      {absubTitle}
    </p>
  </div>
 
    <div class="grid lg:grid-cols-2 justify-items-center gap-5">
    <div class="flex flex-col justify-center">
        <img src="/pictures/surveillance.webp" alt="billboard image" />
      
    </div>
    <div class="order-1 lg:order-2">
        <h2 class="text-3xl font-semibold text-gray-900 dark:text-gray-200">Surveillance Solution in Dubai</h2>
        <p class="text-md mt-4 dark:text-gray-300">In today's dynamic world, the importance of robust surveillance solutions cannot be overstated. As Dubai continues to grow as a global hub of commerce, tourism, and innovation, ensuring the safety and security of its residents and visitors is paramount. At Lovosis, we provide state-of-the-art surveillance solutions tailored to meet the unique needs of Dubai's diverse landscape.</p>
    </div>
  </div>
 


  <div class="text-center mt-32 rounded-2xl mb-20">
    <h1 class="text-balance animate-fade-in-left text-2xl md:text-4xl md:leading-tight font-bold tracking-tight text-neutral-800 dark:text-neutral-100">
    Applications of Lovosis Surveillance Solutions
    </h1>
    
  </div>

  <div class="mx-auto max-w-7xl px-4 mt-20 sm:px-6 lg:px-8 lg:py-1">
    <ul id="cards" class="list-none grid grid-cols-1 grid-rows-4 gap-4">
      <li class="card sticky top-32 pt-4 bg-white dark:bg-neutral-600 rounded-lg shadow-xl cursor-pointer transition-all duration-300" id="card_1">
        <div class="card__content grid grid-cols-1 md:grid-cols-2 gap-1 p-5 rounded-lg text-left relative">
          <div>
            <h2 class="text-4xl font-light dark:text-neutral-200">Residential Communities</h2>
            <p class="text-base font-light leading-normal dark:text-neutral-300">
              Enhance the safety of residential areas with our high-definition cameras and smart monitoring systems. Keep an eye on entrances, playgrounds, and communal areas to ensure a secure living environment.</p>
          </div>
          <figure class="overflow-hidden">
            <img src="/pictures/residense.jpg" alt="Image description" class="w-full h-full object-cover" />
          </figure>
        </div>
      </li>
      <li class="card sticky top-32 pt-4 bg-white dark:bg-neutral-600 rounded-lg shadow-xl cursor-pointer transition-all duration-300" id="card_1">
        <div class="card__content grid grid-cols-1 md:grid-cols-2 gap-1 p-5 rounded-lg text-left relative">
          <div>
            <h2 class="text-4xl font-light dark:text-neutral-200">Commercial Buildings</h2>
            <p class="text-base font-light leading-normal dark:text-neutral-300">Protect your business assets with Lovosisâ€™ advanced surveillance solutions. Monitor office spaces, parking lots, and critical areas to prevent unauthorized access and theft.</p>
