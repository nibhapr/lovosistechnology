    name: "Dahua",
    url: "https://www.dahuasecurity.com/",
    logo: "https://lovosis.com/pictures/Brand%20Logo/dahua.png",
  },
  product: {
    "@type": "Product",
    name: "Dahua CCTV Camera",
    image: "https://lovosis.com/pictures/dahua.png",
    description: { description },
    brand: {
      "@type": "Brand",
      name: "Dahua",
    },
    offers: {
      "@type": "Offer",
      url: "https://lovosis.com/dahua",
      priceCurrency: "AED",
      price: "150",
      eligibleRegion: {
        "@type": "Place",
        name: "UAE",
