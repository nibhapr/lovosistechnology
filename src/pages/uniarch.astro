---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";
import { cameraData } from "../data/camera";
const pageTitle: string = `UniArch Security Cameras | ${SITE.Title + " - " + "Professional Surveillance Solutions In Dubai, United Arab Emirates"}`;
interface Props {
  title: string;
  subTitle?: string;
  benefits?: Array<string>;
}
const description =
  "Uniarch wholesale dealer in UAE offering top-quality CCTV cameras, access control, and security solutions at unbeatable prices. Contact us for bulk pricing";
const abtitle: string = "UniArch Security Cameras in Dubai";
const absubTitle: string =
  "Discover Lovosis, Dubai's authorized supplier of premium UniArch surveillance solutions.";

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      name: "Lovosis Technology L.L.C",
      url: "https://lovosis.com",
      logo: "https://lovosis.come.com/pictures/logo.png",
      description: description,
      sameAs: [
        "https://www.facebook.com/p/LOVOSIS-TECHNOLOGY-100083060600975/",
        "https://www.instagram.com/_lovosis_group_of_companies_/reels/",
      ],
      email: "sales@lovosis.com",
      telephone: "+971509162488",
      address: {
        "@type": "PostalAddress",
        streetAddress:
          "Satellite Market Naif Deira,Baghlaf Building Showroom No.5",
        addressLocality: "Dubai",
        addressCountry: "AE",
        addressRegion: "Dubai,United Arab Emirates",
        postalCode: "123421",
      },
    },
    {
      "@type": "WebPage",
      name: "Uniarch | Lovosis Technology",
      url: "https://lovosis.com/uniarch",
      description: description,
    },
    cameraData.map((p) => {
      return {
        "@type": "ImageObject",
        contentUrl: Astro.url + p.image,
        creditText: p.title,
        creator: {
          "@type": "Person",
          name: "Digiimpact",
        },
        copyrightNotice: "Digiimpact",
      };
    }),
  ],
};
---

<style>
  .autoRotate {
    animation: autoRotateAnimation;
    animation-timeline: view();
  }
  @keyframes autoRotateAnimation {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .autoShow {
    animation: autoShowAnimation both;
    animation-timeline: view(70% 5%);
  }

  @keyframes autoShowAnimation {
    from {
      opacity: 0;
      transform: translateY(200px) scale(0.3);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .fadeInRight {
    animation: fadeInRightAnimation;
    animation-timeline: view();
  }

  @keyframes fadeInRightAnimation {
    from {
      opacity: 0;
      transform: translateX(100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<MainLayout title={pageTitle} sd={structuredData}>
  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
  >
    <div
      class="mb-20 rounded-2xl bg-gray-100 p-5 text-center dark:bg-neutral-500 md:p-12"
    >
      <h1
        class="animate-fade-in-left text-balance text-3xl font-bold tracking-tight text-neutral-800 dark:text-neutral-100 md:text-6xl md:leading-tight"
      >
        {abtitle}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-200">
        {absubTitle}
      </p>
    </div>
    <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
      <div class="bg-gray-100 shadow-xl">
        <img
          src="/pictures/lovosisintersec.JPG"
          ,
          alt=""
          class="h-full w-full object-contain"
        />
      </div>
      <div class="bg-gray-100 shadow-xl">
        <img
          src="/pictures/lovosisintersec1.png"
          ,
          alt=""
          class="h-full w-full object-contain"
        />
      </div>
      <div class="bg-gray-100 shadow-xl">
        <img
          src="/pictures/intersecdubai2025.png"
          ,
          alt=""
          class="h-full w-full object-contain"
        />
      </div>
      <div class="bg-gray-100 shadow-xl">
        <img
          src="/pictures/intersec2025.png"
          ,
          alt=""
          class="h-full w-full object-contain"
        />
      </div>
    </div>
    <div class="mb-5 mt-32 rounded-2xl text-center">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-200">
        Lovosis Technology: Official UAE Partner of Uniarch & Uniview
        Technologies
      </h2>
    </div>
    <div class="mx-auto max-w-7xl dark:text-gray-200">
      <strong>Lovosis Technology</strong> is proud to be the official UAE partner
      of <strong>Uniarch and Uniview Technologies</strong>, leading providers of
      high-quality video surveillance solutions. With years of industry
      experience and a strong presence across the Middle East, Lovosis
      Technology specializes in the distribution and export of Uniarch and
      Uniview products in bulk to meet the growing demand for cutting-edge
      security solutions in the region.
    </div>
    <div class="mb-5 mt-16 rounded-2xl text-center">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-200">
        Why Choose Uniarch?
      </h2>
    </div>
    <div class="mx-auto max-w-7xl dark:text-gray-200">
      <strong>1: High-Quality Security Products</strong>
      <li>
        Both Uniarch and Uniview are committed to delivering world-class
        surveillance solutions. Their products are designed with the latest
        innovations to ensure high performance, reliability, and ease of use,
        making them the preferred choice for businesses and homeowners alike.
      </li>
      <strong>2: Comprehensive Range of Products</strong>
      <li>
        From IP Cameras and PTZ Cameras to Network Video Recorders (NVRs), Video
