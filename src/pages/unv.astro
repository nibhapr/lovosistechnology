import { LovosisData } from "../data/camera";
import { univiewData } from "../data/camera";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";

const pageTitle: string =
  "UNV Cameras & CCTV Solutions in Dubai | Lovosis Technology";
const description =
